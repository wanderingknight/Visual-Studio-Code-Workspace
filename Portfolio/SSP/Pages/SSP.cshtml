@page
@model SSP.Pages.SSPModel
@{

}

<!DOCTYPE html>

<html lang="de">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Portfolio ASP.NET Nr. 2</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>

<body>
    <div class="container">

        <div class="d-flex flex-column align-items-center p-4">
            <h1>Lass uns Schere, Stein, Papier spielen!</h1>
            <h3>Mit wievielen Gesten sollen wir spielen?</h3>
            <form method="post" class="mt-3">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gesten" value="3" @(Model.AnzahlGesten == 3 ?
                        "checked" : "")>
                    <label class="form-check-label">3</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gesten" value="4" @(Model.AnzahlGesten == 4 ?
                        "checked" : "")>
                    <label class="form-check-label">4</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gesten" value="5" @(Model.AnzahlGesten == 5 ?
                        "checked" : "")>
                    <label class="form-check-label">5</label>
                </div>

                <table>
                    <tr>
                        <td>
                            <button class="btn btn-outline-primary" name="geste" value="0"><img
                                    src="pictures/scissor.png" width="160px" height="160px"></img></button>
                        </td>
                        <td>
                            <button class="btn btn-outline-primary" name="geste" value="1"><img src="pictures/rock.png"
                                    width="160px" height="160px"></img></button>
                        </td>
                        <td>
                            <button class="btn btn-outline-primary" name="geste" value="2"><img src="pictures/paper.png"
                                    width="160px" height="160px"></img></button>
                        </td>

                        <td>
                            <button class="btn btn-outline-primary" name="geste" value="3"><img src="pictures/match.png"
                                    width="160px" height="160px"></img></button>
                        </td>
                        <td>
                            <button class="btn btn-outline-primary" name="geste" value="4"><img src="pictures/well.png"
                                    width="160px" height="160px"></img></button>
                        </td>

                    </tr>
                </table>

            </form>


            <div class="m-3"></div>
            @if (Request.Method == "POST")
            {
                int BotGeste = (int)@ViewData["bot-geste"];
                if (BotGeste == 0)
                {
                    <img src="pictures/scissor.png" width="160px" height="160px"></img>
                }
                else if (BotGeste == 1)
                {
                    <img src="pictures/rock.png" width="160px" height="160px"></img>
                }
                else if (BotGeste == 2)
                {
                    <img src="pictures/paper.png" width="160px" height="160px"></img>
                }
                else if (BotGeste == 3)
                {
                    <img src="pictures/match.png" width="160px" height="160px"></img>
                }
                else if (BotGeste == 4)
                {
                    <img src="pictures/well.png" width="160px" height="160px"></img>
                }
                <h2 class="class=" btn btn-outline-primary"">@ViewData["text"]</h2>
            }
        </div>
    </div>
</body>

</html>